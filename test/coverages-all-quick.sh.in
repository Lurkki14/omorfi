#!/bin/bash
analyser=@top_builddir@/src/generated/omorfi.describe.hfst
if test -z $srcdir ; then
    echo Use make check or define srcdir
    exit 1
fi
if test ! -r $srcdir/coverage-fast-alls.freqs ; then
    echo Missing $srcdir/coverage-fast-alls.freqs
    exit 77
fi
if test ! -r @top_builddir@/src/generated/ ; then
    echo Missing @top_builddir@/src/generated/
    exit 77
fi
if ! PYTHONPATH=$PYTHONPATH:@top_builddir@/src/python @PYTHON@ \
        $srcdir/coverage.py -a $analyser \
        -i coverage-fast-alls.freqs -c 1000 -o coverage-short.log ; then
    echo We missed the target of 99 % coverage
    exit 1
fi
exit 0
